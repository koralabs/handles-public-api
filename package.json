{
  "name": "handles-public-api",
  "version": "1.6.0",
  "description": "A downloadable and containerized decentralized API for Handles",
  "main": "index.js",
  "repository": "https://github.com/koralabs/handles-public-api.git",
  "author": "Papa Goose <papa.goose@koralabs.io>",
  "license": "Mozilla Public License 2.0",
  "scripts": {
    "setup_env": "chmod +x setup_env.sh && ./setup_env.sh",
    "start": "yarn setup_env && node express.js",
    "start:forever": "chmod +x setup_env.sh && ./setup_env.sh && mkdir -p forever && forever -p ./forever --minUptime 1 start express.js",
    "start:containers": "chmod +x ./start_containers.sh && ./start_containers.sh",
    "forever:list": "forever list",
    "forever:stop": "forever stopall",
    "build": "tsc && yarn copy-files",
    "tsc": "tsc -p .",
    "copy-files": "yarn copy-swagger && yarn copy-workers",
    "copy-swagger": "cp docs/swagger.yml src/swagger.yml && cp docs/swagger.yml dist/swagger.yml",
    "copy-workers": "cp -r src/workers dist/workers",
    "build:production": "yarn build && cp package.json dist/package.json && cd dist && yarn install --production",
    "dev": "cross-env NODE_ENV=development nodemon",
    "dev:local": "cross-env NODE_ENV=local ORIGIN=* nodemon",
    "dev:mainnet": "cross-env NODE_ENV=production NETWORK=mainnet nodemon",
    "dev:preprod": "cross-env NODE_ENV=development NETWORK=preprod ENABLE_DATUM_ENDPOINT=true nodemon",
    "dev:preview": "cross-env NODE_ENV=development NETWORK=preview ENABLE_DATUM_ENDPOINT=true nodemon",
    "dev:preprod:noDatum": "cross-env NODE_ENV=development NETWORK=preprod nodemon",
    "test": "jest --silent --forceExit --detectOpenHandles --coverage",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "lint:fix": "npm run lint -- --fix"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.0.3",
    "@types/proper-lockfile": "^4.1.2",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/ws": "^8.5.3",
    "@types/yamljs": "^0.2.31",
    "aws-sdk": "^2.1224.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.2",
    "esbuild": "^0.15.9",
    "jest": "^29.0.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "prettier-eslint": "^15.0.1",
    "prettier-eslint-cli": "^7.1.0",
    "supertest": "^6.2.4",
    "ts-jest": "^29.0.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "@cardano-ogmios/client": "^5.5.5",
    "@koralabs/kora-labs-common": "4.1.3",
    "bech32": "^2.0.0",
    "boolean": "^3.2.0",
    "cbor": "^8.1.0",
    "cors": "^2.8.5",
    "crc": "^4.3.2",
    "cross-fetch": "^3.1.5",
    "express": "^4.18.1",
    "fastq": "^1.14.0",
    "forever": "^4.0.3",
    "proper-lockfile": "^4.1.2",
    "swagger-ui-express": "^4.5.0",
    "yamljs": "^0.3.0"
  }
}
